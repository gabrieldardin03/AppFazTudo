<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      alignment="CENTER"
      spacing="20.0"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.appfaztudo.ConversaoTemperaturaController"
            prefHeight="400.0" prefWidth="600.0">


        <Label>Conversão de Temperatura</Label>
        <Label>Informe uma temperatura em graus celsius</Label>
        <TextField fx:id="textValorCelsius"/>
        <Label>Selecione a metrica para conversão</Label>
        <ComboBox fx:id="comboMetrica"/>
        <Button onMouseClicked="#onConverterButtonClick">Converter</Button>
        <Label fx:id="labelResultado"/>



</VBox>
